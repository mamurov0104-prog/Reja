<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reja</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
  </head>

  <body style="background-color: #b8bbd1">
    <div class="container mt-5">
      <h1 class="display-4 text-center py-3">REJA VA MAQSADLAR</h1>

      <div class="p-3 shadow-sm bg-white rounded">
        <form id="create-form" action="/create-item" method="POST">
          <div class="d-flex align-items-center">
            <input
  id="create-field"
  name="reja"
  type="text"
  class="form-control"
  placeholder="Yangi reja kiriting..."
  required
            />

            <button class="btn btn-primary ms-2">
              Yangi Reja Qo‘shish
            </button>
          </div>
        </form>
      </div>

      <ul id="item-list" class="list-group pb-5 mt-4">
        <% if (items && items.length > 0) { %>
          <% items.forEach(function(item) { %>
            <li class="list-group-item list-group-item-info d-flex align-items-center justify-content-between">
              <span class="item-text">
                <%= item.reja %>
              </span>

              <div>
                <button
                  data-id="<%= item._id %>"
                  class="edit-me btn btn-secondary btn-sm me-1"
                >
                  o‘zgartirish
                </button>

                <button
                  data-id="<%= item._id %>"
                  class="delete-me btn btn-danger btn-sm"
                >
                  o‘chirish
                </button>
              </div>
            </li>
          <% }) %>
        <% } else { %>
          <li class="list-group-item text-center">
            Hozircha reja yo‘q
          </li>
        <% } %>
      </ul>

      <button
        id="clean-all"
        class="btn btn-danger"
        style="border-radius: 20px; margin-top: 30px"
      >
        Hammasini o‘chirish
      </button>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script src="browser.js"></script>
  </body>
</html>
